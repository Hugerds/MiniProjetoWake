@model MiniProjetoWakeCore.Data.Models.Produto;

<h1>Editar Produto</h1>

<form method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input asp-for="Nome" value="@Model.Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Estoque">Estoque</label>
        <input asp-for="Estoque" value="@Model.Estoque" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Valor">Valor</label>
        <input asp-for="Valor" value="@Model.Valor" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<a asp-page="./Detalhes" asp-route-id="@Model">Voltar para Detalhes</a>
