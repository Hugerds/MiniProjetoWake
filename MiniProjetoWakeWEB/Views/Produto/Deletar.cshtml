@model MiniProjetoWakeCore.Data.Models.Produto;

<h1>Confirmar Exclusão</h1>

<p>Tem certeza de que deseja excluir o produto <strong>@Model.Nome</strong>?</p>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-page="./Details" asp-route-id="@Model.Id">Cancelar</a>
</form>
